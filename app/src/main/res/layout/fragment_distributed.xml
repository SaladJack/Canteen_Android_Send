<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_color"
        android:orientation="horizontal"
        
        >

        <TextView
            android:id="@+id/show_distributed_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/choose2_normal"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/toolbar_return_marginLeft"
            android:text="已送达"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/toolbar_textsize" />

    </RelativeLayout>
	<LinearLayout
		android:id="@+id/distributed_calendar"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:background="@color/toolbar_color"
		android:visibility="gone"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/distributed_calendar_year_add"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="+"
				android:textColor="#fff"
				android:textSize="25sp"
				/>

			<TextView
				android:id="@+id/distributed_calendar_month_add"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="+"
				android:textColor="#fff"
				android:textSize="25sp"
				/>

			<TextView
				android:id="@+id/distributed_calendar_day_add"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="+"
				android:textColor="#fff"
				android:textSize="25sp"
				/>
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1">

			<TextView
				android:id="@+id/distributed_calendar_year"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="2016"

				android:textColor="#fff"
				android:textSize="20sp"
				/>

			<TextView
				android:id="@+id/distributed_calendar_month"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="1"
				android:textColor="#fff"
				android:textSize="20sp"
				/>

			<TextView
				android:id="@+id/distributed_calendar_day"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="1"
				android:textColor="#fff"
				android:textSize="20sp"
				/>
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1">

			<TextView
				android:id="@+id/distributed_calendar_year_reduce"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="-"
				android:textColor="#fff"
				android:textSize="25sp"
				/>

			<TextView
				android:id="@+id/distributed_calendar_month_reduce"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="-"
				android:textColor="#fff"
				android:textSize="25sp"
				/>

			<TextView
				android:id="@+id/distributed_calendar_day_reduce"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="-"
				android:textColor="#fff"
				android:textSize="25sp"
				/>
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				>

				<Button
					android:id="@+id/distributed_calendar_comfirm"
					android:layout_height="40dp"
					android:layout_width="80dp"
					android:gravity="center"
					android:background="@drawable/bt_bg"
					android:text="确定"
					android:textColor="#418AC8"
					/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				>

				<Button
					android:id="@+id/distributed_calendar_today"
					android:layout_height="40dp"
					android:layout_width="80dp"
					android:gravity="center"
					android:background="@drawable/bt_bg"
					android:text="今天"
					android:textColor="#418AC8"
					/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				>

				<Button
					android:id="@+id/distributed_calendar_cancel"
					android:layout_height="40dp"
					android:layout_width="80dp"
					android:gravity="center"
					android:background="@drawable/bt_bg"
					android:text="取消"
					android:textColor="#418AC8"
					/>

			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        

    	
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >
            
            <TextView

                android:layout_width="match_parent"
				android:layout_height="@dimen/spinner_top_height"
                android:gravity="center"
                android:text="配送区域"
				android:textColor="@color/spinner_top_color"
				android:textSize="@dimen/spinner_top_textSize"

                />
            
            <Spinner
                android:id="@+id/distributed_area"
                android:layout_width="match_parent"
				android:layout_height="@dimen/spinner_height"
                android:spinnerMode="dropdown"
                android:gravity="center"
                android:background="#ffffff"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >
            
            <TextView
                android:layout_width="wrap_content"
				android:layout_height="@dimen/spinner_top_height"
                android:text="配送楼栋"
                android:layout_gravity="center"

                android:gravity="center"
				android:textColor="@color/spinner_top_color"
				android:textSize="@dimen/spinner_top_textSize"
                />
            
            <Spinner 
                android:id="@+id/distributed_dorm"
                android:layout_width="match_parent"
				android:layout_height="@dimen/spinner_height"
                android:spinnerMode="dropdown"
                android:gravity="center"
                android:background="#ffffff"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >
            
            <TextView
                android:layout_width="wrap_content"
				android:layout_height="@dimen/spinner_top_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="送达时间"
				android:textColor="@color/spinner_top_color"
				android:textSize="@dimen/spinner_top_textSize"
                />

			<Spinner
				android:id="@+id/distributed_time"
				android:layout_width="match_parent"
				android:layout_height="@dimen/spinner_height"
				android:spinnerMode="dropdown"
				android:gravity="center"
				android:background="#ffffff"
				/>


        </LinearLayout>
    </LinearLayout>


	<com.chanven.lib.cptr.PtrFrameLayout
		xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
		android:id="@+id/distributed_ptr_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#f0f0f0"
		cube_ptr:ptr_duration_to_close="200"
		cube_ptr:ptr_duration_to_close_header="700"
		cube_ptr:ptr_keep_header_when_refresh="true"
		cube_ptr:ptr_pull_to_fresh="false"
		cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
		cube_ptr:ptr_resistance="1.8" >
    <ListView
        android:id="@+id/distributed_show_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		tools:listitem="@layout/distributed_takeoutfood"
        android:background="#ffffff" 
        android:divider="@null"
        />
	</com.chanven.lib.cptr.PtrFrameLayout>
</LinearLayout>
