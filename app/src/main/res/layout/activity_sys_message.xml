<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/toolbar_color"
        >

        <Button
            android:id="@+id/system_message_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/toolbar_return_marginLeft"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_arrow_back"
            android:textColor="#fff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/toolbar_title_marginLeft"
            android:layout_toRightOf="@+id/system_message_back"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:text="系统消息"
            android:textSize="@dimen/toolbar_textsize"
            android:textColor="#fff"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <ListView
        android:background="#fff"
        android:cacheColorHint="#0000"
        android:id="@+id/lv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@null"/>
</LinearLayout>
