<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3092e8"
    tools:context=".activity.LoginActivity" >

    <TextView
        android:id="@+id/forgetnumber_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/land_Btn"
        android:layout_below="@+id/land_Btn"
        android:layout_marginTop="19dp"
        android:text="忘记密码?"
        android:textColor="#1d5e91" 
        android:textSize="16sp"/>
    
    <TextView
        android:id="@+id/register_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/land_Btn"
        android:layout_below="@+id/land_Btn"
        android:layout_marginTop="19dp"
        android:textColor="#1d5e91" 
        android:textSize="16sp"
        android:text="注册"
        ></TextView>

    <Button
        android:id="@+id/land_Btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/password_Et"
        android:layout_below="@+id/password_Et"
        android:layout_marginTop="14dp"
        android:background="#ffffff"
        android:text="@string/land"
        android:textColor="#3ea2ce"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/password_Et"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/accountnumber_Et"
        android:layout_below="@+id/accountnumber_Et"
        android:ems="10"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:hint=" 密码"
        android:inputType="textPassword"
        android:drawableLeft="@mipmap/password" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/scut" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@mipmap/logo" />

    <EditText
        android:id="@+id/accountnumber_Et"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:drawableLeft="@mipmap/number"
        android:ems="10"
        android:hint=" 账号"
        android:textColor="#000000" />

</RelativeLayout>