<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff" >
    
	<View
	    android:layout_width="match_parent"
	    android:layout_height="8dp"
	    android:background="#EEEEEE"
	    />
	
	<LinearLayout
	    android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
	    >
	    <View
	    	android:layout_width="0dp"
	    	android:layout_weight="0.3"
	    	android:layout_height="match_parent"
	    	android:background="#EEEEEE"
	        />
	    
	    <LinearLayout
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:layout_weight="8"
	        android:orientation="vertical"
	        >
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            >

	            <TextView
	                android:id="@+id/distributed_person_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentBottom="true"
	                android:layout_alignParentLeft="true"
	                android:layout_marginLeft="20dp"
					android:layout_marginBottom="8dp"
					android:textSize="20dp"
					android:textStyle="bold"
	                android:text="梁同学"
	                android:textColor="@color/lv_text_color" />

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
					android:layout_marginRight="19dp"
					android:textSize="15dp"
	                android:textColor="#A8A8A8"
	                android:text="送达于"
					android:layout_marginEnd="19dp"
					android:layout_alignBottom="@+id/distributed_person_name"
					android:layout_alignParentRight="true"
					android:layout_alignParentEnd="true" />
	            
	        </RelativeLayout>
	        
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal" >

	            <ImageView
	                android:id="@+id/imageView1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentTop="true"
	                android:layout_marginLeft="18dp"
	                android:src="@mipmap/location_on" />

	            <TextView
	                android:id="@+id/distributed_which_area"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
					android:layout_marginLeft="9dp"

					android:textColor="#565656"
	                android:textSize="20dp"
	                android:text="北十，北校区"
					android:layout_marginTop="4dp"
					android:layout_alignParentTop="true"
					android:layout_toRightOf="@+id/imageView1"
					android:layout_toEndOf="@+id/imageView1"
					android:layout_marginStart="9dp" />

	            <TextView
	                android:id="@+id/distributed_which_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
					android:layout_marginRight="16dp"
	                android:textColor="#565656"
	                android:textSize="20dp"
					android:textStyle="bold"
	                android:text="12:14"
					android:layout_marginEnd="16dp"
					android:layout_alignTop="@+id/distributed_which_area"
					android:layout_alignParentRight="true"
					android:layout_alignParentEnd="true" />

	        </RelativeLayout>

	    </LinearLayout>
	    <View
	    	android:layout_width="0dp"
	    	android:layout_weight="0.3"
	    	android:layout_height="match_parent"
	    	android:background="#EEEEEE"
	        />
	    </LinearLayout>
	    
	<View
	    android:layout_width="match_parent"
	    android:layout_height="7dp"
	    android:background="#EEEEEE"
	    />
</LinearLayout>
