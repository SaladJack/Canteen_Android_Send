<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3191E8"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/return_to_ForgetNumberActivity_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="#3191E8"
        android:src="@mipmap/arrow_left_c"
        >
    </ImageButton>

    <Button
        android:id="@+id/forgetnumber_comfirm_Btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/new_password_again_Et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:text="确认" 
        android:textColor="#3ea2ce"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/new_password_again_Et"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/forgetnumber_comfirm_Btn"
        android:layout_below="@+id/new_password_Et"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="再次输入新密码"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/new_password_Et"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/new_password_again_Et"
        android:layout_below="@+id/return_to_ForgetNumberActivity_Btn"
        android:layout_marginTop="188dp"
        android:ems="10"
        android:hint="新密码"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/new_password_Et"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:src="@mipmap/scut" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/return_to_ForgetNumberActivity_Btn"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo" />

</RelativeLayout>